{
  "manifest_version": 1,
  "name": "主人身份验证插件 (Owner Authentication Plugin)",
  "version": "1.1.0",
  "description": "为麦麦机器人提供主人身份验证功能，在思考流程前验证发言者身份，兼容0.10.0版本",
  "author": {
    "name": "风花叶",
    "url": "https://github.com/MaiM-with-u"
  },
  "license": "GPL-v3.0-or-later",
  
  "host_application": {
    "min_version": "0.10.0"
  },
  "homepage_url": "https://github.com/khiqwq",
  "repository_url": "https://github.com/khiqwq/owner_auth_plugin",
  "keywords": ["authentication", "owner", "security", "identity", "patch"],
  "categories": ["Security", "Authentication"],
  
  "default_locale": "zh-CN",
  "locales_path": "_locales",
  
  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "security",
    "components": [
      {
        "type": "event_handler",
        "name": "owner_auth_handler",
        "description": "主人身份验证事件处理器",
        "event_type": "on_message",
        "weight": 1000,
        "intercept_message": false
      }
    ],
    "features": [
      "主人身份验证",
      "高优先级事件处理",
      "思考流程前介入",
      "安全身份识别",
      "0.10.0版本兼容",
      "补丁自动管理",
      "插件卸载时自动清理"
    ]
  }
}
